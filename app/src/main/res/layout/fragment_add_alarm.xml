<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF000000"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <!-- Top App Bar -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:paddingHorizontal="16dp"
        android:paddingTop="8dp">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:padding="4dp"
            android:src="@drawable/baseline_arrow_back_ios_24"
            app:tint="#FFFFFFFF" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="sans-serif-medium"
            android:text="Add alarm"
            android:textColor="#FFFFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:text="Save"
            android:textColor="#FF1976D2"
            android:textSize="16sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Time Picker Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingVertical="32dp">

                <!-- Big Time Display -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_selected_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:text="07:00"
                        android:textColor="#FFFFFFFF"
                        android:textSize="72sp" />

                    <TextView
                        android:id="@+id/tv_selected_ampm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="16dp"
                        android:fontFamily="sans-serif-light"
                        android:text="AM"
                        android:textColor="#FF9E9E9E"
                        android:textSize="24sp" />

                </LinearLayout>

                <!-- Time Picker Wheels -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <!-- Hour Picker -->
                    <NumberPicker
                        android:id="@+id/np_hour"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:theme="@style/NumberPickerTheme" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="16dp"
                        android:text=":"
                        android:textColor="#FFFFFFFF"
                        android:textSize="32sp" />

                    <!-- Minute Picker -->
                    <NumberPicker
                        android:id="@+id/np_minute"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:theme="@style/NumberPickerTheme" />

                    <!-- AM/PM Picker -->
                    <NumberPicker
                        android:id="@+id/np_ampm"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="24dp"
                        android:theme="@style/NumberPickerTheme" />

                </LinearLayout>

            </LinearLayout>

            <!-- Alarm Settings -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FF1A1A1A"
                android:orientation="vertical"
                android:paddingVertical="8dp">

                <!-- Alarm Name -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/baseline_label_24"
                        app:tint="#FF9E9E9E" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_weight="1"
                        android:text="Alarm name"
                        android:textColor="#FFFFFFFF"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_alarm_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Alarm"
                        android:textColor="#FF9E9E9E"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="8dp"
                        android:src="@drawable/baseline_arrow_right_24"
                        app:tint="#FF9E9E9E" />

                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="56dp"
                    android:background="#FF333333" />

                <!-- Repeat Days -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackground"
                    android:orientation="vertical"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/baseline_event_repeat_24"
                            app:tint="#FF9E9E9E" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_weight="1"
                            android:text="Repeat"
                            android:textColor="#FFFFFFFF"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <!-- Days Selection -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="40dp"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal">

                        <ToggleButton
                            android:id="@+id/btn_monday"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_marginEnd="8dp"
                            android:background="@drawable/day_selector"
                            android:textColor="@color/day_text_selector"
                            android:textOff="M"
                            android:textOn="M"
                            android:textSize="12sp" />

                        <ToggleButton
                            android:id="@+id/btn_tuesday"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_marginEnd="8dp"
                            android:background="@drawable/day_selector"
                            android:textColor="@color/day_text_selector"
                            android:textOff="T"
                            android:textOn="T"
                            android:textSize="12sp" />

                        <ToggleButton
                            android:id="@+id/btn_wednesday"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_marginEnd="8dp"
                            android:background="@drawable/day_selector"
                            android:textColor="@color/day_text_selector"
                            android:textOff="W"
                            android:textOn="W"
                            android:textSize="12sp" />

                        <ToggleButton
                            android:id="@+id/btn_thursday"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_marginEnd="8dp"
                            android:background="@drawable/day_selector"
                            android:textColor="@color/day_text_selector"
                            android:textOff="T"
                            android:textOn="T"
                            android:textSize="12sp" />

                        <ToggleButton
                            android:id="@+id/btn_friday"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_marginEnd="8dp"
                            android:background="@drawable/day_selector"
                            android:textColor="@color/day_text_selector"
                            android:textOff="F"
                            android:textOn="F"
                            android:textSize="12sp" />

                        <ToggleButton
                            android:id="@+id/btn_saturday"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_marginEnd="8dp"
                            android:background="@drawable/day_selector"
                            android:textColor="@color/day_text_selector"
                            android:textOff="S"
                            android:textOn="S"
                            android:textSize="12sp" />

                        <ToggleButton
                            android:id="@+id/btn_sunday"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:background="@drawable/day_selector"
                            android:textColor="@color/day_text_selector"
                            android:textOff="S"
                            android:textOn="S"
                            android:textSize="12sp" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="56dp"
                    android:background="#FF333333" />

                <!-- Alarm Sound -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/baseline_library_music_24"
                        app:tint="#FF9E9E9E" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_weight="1"
                        android:text="Alarm sound"
                        android:textColor="#FFFFFFFF"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_alarm_sound"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Default"
                        android:textColor="#FF9E9E9E"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="8dp"
                        android:src="@drawable/baseline_arrow_right_24"
                        app:tint="#FF9E9E9E" />

                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="56dp"
                    android:background="#FF333333" />

                <!-- Vibration -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/baseline_vibration_24"
                        app:tint="#FF9E9E9E" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_weight="1"
                        android:text="Vibration"
                        android:textColor="#FFFFFFFF"
                        android:textSize="16sp" />

                    <Switch
                        android:id="@+id/switch_vibration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:theme="@style/SwitchTheme" />

                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="56dp"
                    android:background="#FF333333" />

                <!-- Snooze -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/baseline_snooze_24"
                        app:tint="#FF9E9E9E" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_weight="1"
                        android:text="Snooze"
                        android:textColor="#FFFFFFFF"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_snooze_duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5 minutes"
                        android:textColor="#FF9E9E9E"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="8dp"
                        android:src="@drawable/baseline_arrow_right_24"
                        app:tint="#FF9E9E9E" />

                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="56dp"
                    android:background="#FF333333" />

                <!-- Volume -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackground"
                    android:orientation="vertical"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/baseline_volume_up_24"
                            app:tint="#FF9E9E9E" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_weight="1"
                            android:text="Volume"
                            android:textColor="#FFFFFFFF"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_volume_level"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="80%"
                            android:textColor="#FF9E9E9E"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <SeekBar
                        android:id="@+id/seekbar_volume"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="40dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="16dp"
                        android:max="100"
                        android:progress="80"
                        android:progressTint="#FF1976D2"
                        android:thumbTint="#FF1976D2" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>